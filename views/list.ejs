<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <form class="item" action="<%= route %>" method="post">
    <input
      type="text"
      name="newTask"
      placeholder="Add new task"
      autocomplete="off"
    />
    <button type="submit" name="button">+</button>
  </form>

  <% for(var i = 0; i < newTasks.length; i++) { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= newTasks[i] %></p>
  </div>
  <% } %>
</div>

<%- include("footer") -%>